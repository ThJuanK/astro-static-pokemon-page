---
interface Props {
    name: string;
    url: string;
    isBig?: boolean;
}

const { name, url, isBig = false } = Astro.props;

const pokemonId = url.split('/').at(-2);

const imageUrl = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${pokemonId}.png`
---


<a  
    href={`/pokemons/${name}`} 
    class:list={[`rounded justify-center flex flex-col items-center border-sky-600`, {border: !isBig}]}
>
    <img 
        transition:name={`${name}-image`}
        src={imageUrl} 
        alt={name} 
        class:list={[
            {"w-100": isBig},
            {"w-20": !isBig},
        ]}
    >
    <span class:list={["text-blue-100 capitalize", { "text-3xl text-blue-300": isBig }]}>#{pokemonId} { name }</span>
</a>
